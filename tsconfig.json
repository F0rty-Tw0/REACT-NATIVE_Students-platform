{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "jsx": "react-native",
    "baseUrl": ".",
    "paths": {
      "@/*": ["*"],
      "@/constants/*": ["features/shared/constants/*"],
      "@/hooks/*": ["hooks/*"],
      "@/models/*": ["models/*"],
      "@/navigation/*": ["navigation/*"],
      "@/redux/*": ["redux/*"],
      "@/features/*": ["features/*"],
      "@/types/*": ["types/*"],
      "@/images/*": ["assets/images/*"]
    }
  }
}
